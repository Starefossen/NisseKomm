{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": ["scripts/**/*.ts"],
  "ignore": [
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    "__tests__/**",
    "jest.config.js",
    "sanity/**",
    "sanity.config.ts",
    "sanity.cli.ts",
    ".sanity/**"
  ],
  "ignoreDependencies": ["pixelarticons", "@sanity/vision", "@types/uuid"],
  "ignoreExportsUsedInFile": true,
  "next": {
    "entry": [
      "next.config.{js,ts,cjs,mjs}",
      "src/app/layout.{ts,tsx}",
      "src/app/**/layout.{ts,tsx}",
      "src/app/page.{ts,tsx}",
      "src/app/**/page.{ts,tsx}",
      "src/middleware.{ts,tsx}"
    ]
  }
}
